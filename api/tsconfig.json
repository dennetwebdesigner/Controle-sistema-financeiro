{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "typeRoots": ["./@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
